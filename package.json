{
  "name": "@jerrickhakim/firestore-edge",
  "version": "1.0.0",
  "description": "Lightweight Firestore client using REST API with service account authentication. Designed for edge runtimes and workflow environments.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "link": "npm run build && npm link",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "firebase",
    "firestore",
    "edge",
    "cloudflare",
    "vercel",
    "rest-api",
    "service-account",
    "workflow",
    "serverless"
  ],
  "author": "jerrickhakim",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerrickhakim/firestore-edge.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/ui": "^2.0.0",
    "dotenv": "^16.4.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "jose": "^6.1.3"
  }
}
